{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "outDir": "../dist-electron",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "jsx": "preserve",
    "paths": {
      "@/*": ["../src/*"],
      "@electron/*": ["./*"]
    }
  },
  "include": ["**/*.ts", "**/*.mts"],
  "exclude": ["../dist-electron", "../node_modules"]
}
