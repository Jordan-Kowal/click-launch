{
  "name": "click-launch",
  "version": "1.0.0",
  "main": "dist-electron/main.js",
  "license": "MIT",
  "author": "Jordan Kowal",
  "homepage": "https://github.com/Jordan-Kowal/click-launch#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Jordan-Kowal/click-launch.git"
  },
  "bugs": {
    "url": "https://github.com/Jordan-Kowal/click-launch/issues"
  },
  "description": "Desktop app for managing your local dev stack - configure once, launch everything with a click.",
  "keywords": [
    "es6",
    "typescript",
    "ts",
    "react",
    "gui",
    "electron",
    "launcher",
    "process manager",
    "click launch"
  ],
  "types": "dist/index.d.ts",
  "files": [
    "dist/",
    "CHANGELOG.md",
    "LICENSE.md",
    "README.md"
  ],
  "scripts": {
    "clean": "rimraf dist dist-electron release",
    "start": "concurrently \"vite\" \"wait-on dist-electron/main.js && IS_DEV=true electron .\"",
    "build": "yarn clean && tsc && vite build && electron-builder",
    "build:dev": "yarn clean && tsc && vite build && electron-builder --dir",
    "biome:check": "biome check ./src ./electron",
    "biome:check:fix": "biome check ./src ./electron --write --unsafe",
    "test": "(export NODE_NO_WARNINGS=1 && vitest)",
    "test:coverage": "(export NODE_NO_WARNINGS=1 && vitest --coverage --silent)",
    "quality": "yarn biome:check && yarn tsc"
  },
  "dependencies": {
    "dayjs": "1.11.18",
    "fix-path": "^5.0.0",
    "js-yaml": "4.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@tailwindcss/postcss": "4.1.13",
    "@tailwindcss/typography": "0.5.18",
    "@tailwindcss/vite": "4.1.13",
    "@testing-library/dom": "10.4.1",
    "@testing-library/jest-dom": "6.8.0",
    "@testing-library/react": "16.3.0",
    "@testing-library/react-hooks": "8.0.1",
    "@testing-library/user-event": "14.6.1",
    "@types/js-cookie": "3.0.6",
    "@types/js-yaml": "4.0.9",
    "@types/node": "24.5.2",
    "@types/react": "19.1.13",
    "@types/react-dom": "19.1.9",
    "@vitejs/plugin-react": "5.0.3",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "3.2.4",
    "autoprefixer": "10.4.21",
    "concurrently": "9.2.1",
    "daisyui": "5.1.14",
    "electron": "38.1.2",
    "electron-builder": "26.0.12",
    "i18next-parser": "9.3.0",
    "jsdom": "27.0.0",
    "lucide-react": "0.544.0",
    "million": "3.1.11",
    "postcss": "8.5.6",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "react-toastify": "11.0.5",
    "rimraf": "6.0.1",
    "rollup-plugin-visualizer": "6.0.3",
    "tailwindcss": "4.1.13",
    "ts-node": "10.9.2",
    "typescript": "5.9.2",
    "vite": "7.1.7",
    "vite-plugin-electron": "0.29.0",
    "vite-plugin-electron-renderer": "0.14.6",
    "vitest": "3.2.4",
    "wait-on": "9.0.1",
    "wouter": "3.7.1"
  },
  "build": {
    "appId": "app.jkdev.click-launch",
    "productName": "ClickLaunch",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "public/**/*"
    ],
    "asarUnpack": [],
    "extraResources": [
      {
        "from": "public/logo.png",
        "to": "logo.png"
      }
    ],
    "compression": "normal",
    "nsis": {
      "oneClick": false
    },
    "mac": {
      "target": {
        "target": "zip",
        "arch": ["arm64"]
      },
      "artifactName": "${productName}-${version}.${ext}",
      "icon": "./public/app-icon.icns",
      "identity": null
    },
    "publish": null
  }
}
