{
  "permissions": {
    "allow": [
      "Bash(task:*)",
      "Bash(bun run biome:check:*)",
      "Bash(bun run tsc:*)",
      "Bash(go test:*)",
      "Bash(golangci-lint:*)"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "git status --short && echo '---' && git log -3 --oneline"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit|NotebookEdit",
        "hooks": [
          {
            "type": "command",
            "command": "./scripts/claude-postwrite.sh $CLAUDE_FILE_PATHS"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bun run tsc 2>&1 | head -30 || true"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "gopls-lsp@claude-plugins-official": true,
    "typescript-lsp@claude-plugins-official": true
  }
}
