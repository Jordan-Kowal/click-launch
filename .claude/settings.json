{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "git status --short && echo '---' && git log -3 --oneline"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit|NotebookEdit",
        "hooks": [
          {
            "type": "command",
            "command": "pnpm biome:check:fix $CLAUDE_FILE_PATHS"
          }
        ]
      },
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "for f in $CLAUDE_FILE_PATHS; do case $f in *.go) gofmt -w $f ;; esac; done && golangci-lint run"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "pnpm tsc 2>&1 | head -30 || true"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(task:*)",
      "Bash(pnpm biome:check:*)",
      "Bash(pnpm tsc:*)",
      "Bash(go test:*)",
      "Bash(golangci-lint:*)"
    ]
  }
}
